<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSF"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/img_toolbar"
        app:layout_scrollFlags="scroll|enterAlways"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/ibSearchSF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/Icon"
                android:src="@drawable/ic_search_bwhite"
                android:background="@null"
                />
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchViewSF"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/ibSearchSF"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                android:theme="@style/AppSearchView"
                android:background="@drawable/shape_border_search"
                app:iconifiedByDefault="false"
                app:searchIcon="@null"
                app:queryHint="@string/Query_Hint"
                app:queryBackground="@null"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/llNoResultSF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/Description_Background_Color"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_border_description"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/No_Result"
                android:textSize="@dimen/Description_Content_Size"
                android:textColor="@color/Description_Content_Color"
                />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.appbar.AppBarLayout>